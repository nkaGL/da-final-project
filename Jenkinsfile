pipeline {
    agent any

    stages {
        stage('Notify about PR') {
            steps {
                echo 'Hello World1'
            }
        }

        stage('Build') {
            steps {
                echo 'Hello World2'
            }

         stage('Test') {
            steps {
                echo 'Hello World3'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Hello World4'
            }
        }
    }
}
